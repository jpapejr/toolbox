#!/bin/bash
echo "Removing any existing ~/.vim directory"
rm -fr ~/.vim
echo "Linking up toolbox-provided vim directory to ~/.vim"
ln -s $TOOLBOX_HOME/vim ~/.vim
cd ~/.vim
git submodule init
echo "Installing vim-airline"
git submodule add https://github.com/ctrlpvim/ctrlp.vim.git vim/pack/dist/start/vim-airline
echo "Installing ctrl-p"
git submodule add https://github.com/ctrlpvim/ctrlp.vim.git vim/pack/dist/start/ctrlp
echo "Done"
